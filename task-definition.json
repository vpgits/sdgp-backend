{
  "family": "sdgp-backend",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "sdgp-backend-web",
      "image": "702913649645.dkr.ecr.us-east-2.amazonaws.com/sdgp-backend-web",
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/sdgp-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "links": ["sdgp-backend-rabbitmq"],
      "essential": true,
      "command": ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
    },
    {
      "name": "sdgp-backend-rabbitmq",
      "image": "702913649645.dkr.ecr.us-east-2.amazonaws.com/sdgp-backend-rabbitmq",
      "cpu": 512,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 15672,
          "hostPort": 15672,
          "protocol": "tcp"
        },
        {
          "containerPort": 5672,
          "hostPort": 5672,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/sdgp-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    },
    {
      "name": "sdgp-backend-worker",
      "image": "702913649645.dkr.ecr.us-east-2.amazonaws.com/sdgp-backend-worker",
      "essential": true,
      "command": [
        "celery",
        "-A",
        "celery_app.celery_app:app",
        "worker",
        "--loglevel=info"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/sdgp-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "links": ["sdgp-backend-rabbitmq"]
    }
  ],
  "executionRoleArn": "arn:aws:iam::702913649645:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::702913649645:role/ecsTaskRole",
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "requiresCompatibilities": ["FARGATE"],
  "memory": "2048",
  "cpu": "1024"
}
